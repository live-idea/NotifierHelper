<table>
  <tr>
    <td>
      <%= link_to t("common.add"), new_event_path %>
    </td>
  </tr>
</table>
      

<table class="w100p borderT">
<% @events.each do |event| %>
  <tr>
    <td><%= link_to render(:partial=>"events/list_item", :locals => {:event => event}), event%></td>
    <td width="50px" align="right"><%= link_to t("common.edit"), edit_event_path(event) %></td>
    <td width="50px" align="right"><%= link_to t("common.delete"), event, :confirm => t("common.are_you_sure"), :method => :delete %></td>
  </tr>
<% end %>
</table>

